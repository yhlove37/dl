<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ssm.dao.UserMapper">
    <insert id="register" parameterType="User">
        insert into user 
        values (
                #{uid},
                #{username},
                #{password},
                #{name},
                #{email},
                #{telephone},
                #{birthday},
                #{sex},
                #{state},
                #{code},
                #{headimage}
        )
        
    </insert>
    <update id="mailActivate" parameterType="String">
        update user
        set state = 1
        where code = #{activeCode}
    </update>
    <select id="checkUserName" parameterType="String"
        resultType="Long">
        select count(*) 
        from user 
        where username = #{username}
    </select>
    
    <select id="login" parameterType="String"
            resultType="User">
        select *
        from user
        where username = #{username} and password = #{password}
    </select>

<!--    查找所用用户-->
    <select id="findAllusers" resultType="User">
        select * from user
    </select>

    <delete id="deletebyid" parameterType="String" >
        delete from user where uid=#{uid}
    </delete>



<!--    激活用户-->
    <update id="activebyuid" parameterType="String">
        update user
        set state = 1
        where uid=#{uid}
    </update>


    <update id="updateaction" parameterType="User">
        update user set
            username =#{username},
            email = #{email},
            password =#{password},
            telephone =#{telephone},
            headimage=#{headimage},
            birthday=#{birthday},
            sex= #{sex}
            where uid = #{uid}
    </update>



    <update id="canelbyuid" parameterType="String">
        update user
        set state = 0
        where uid=#{uid}
    </update>
    
</mapper>